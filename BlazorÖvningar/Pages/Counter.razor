@page "/counter"

<PageTitle>Amna & Israa Counter</PageTitle>

<h1>Amna & Israa Counter</h1>

<p role="status">
    Current count: <span class="counter-value">@currentCount</span>
</p>

<div class="d-flex gap-3 mt-4">
    <button class="btn custom-btn" @onclick="IncrementCount">Amna's Click (+1)</button>
    <button class="btn custom-btn secondary" @onclick="DecrementCount">Israa's Click (-1)</button>
    <button class="btn custom-btn reset" @onclick="ResetCount">Reset (0)</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }
}